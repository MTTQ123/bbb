---
import Navigation from "./Navigation.astro";
import NavigationMobile from "./NavigationMobile.astro";
import ThemeIcon from "./ThemeIcon.astro";
import Hamburger from "./Hamburger.astro";

import { title } from "../scripts/globalVar.js";
import { title_short } from "../scripts/globalVar.js";
---

<header class="sticky top-0 z-50 shadow-md backdrop-blur-2xl">
  <nav class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <p
        class="w-[200px] text-xl font-serif font-bold hover:text-theme-6 hidden xs:block"
      >
        <a href="/">
          {title}
        </a>
      </p>
      <p
        class="w-[200px] text-xl font-serif font-bold hover:text-theme-6 xs:hidden"
      >
        {title_short}
      </p>
      <Navigation />
      <Hamburger />
      <ThemeIcon />
    </div>
    <div
      class="nav-links md:hidden absolute top-full origin-top left-0 w-full text-gray-5 dark:text-gray-3 transition-transform duration-300 ease-in-out scale-y-0 opacity-0"
    >
      <NavigationMobile />
    </div>
  </nav>
</header>
